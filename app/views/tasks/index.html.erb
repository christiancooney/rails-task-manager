<h1>My tasks</h1>


<ol>
  <% @task.each do |task| %>
    <li><%= link_to task.title, task_path(task)%></li>
    <p><%= link_to "Delete", task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %></p>
  <% end %>
</ol>


<p><%= link_to "Add a new task", tasks_new_path %></p>
