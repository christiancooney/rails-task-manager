<div class="container text-center">
<div class="card text-center">
<h1>New Task</h1>
</div>

<div class="card text-center">

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
<% end %>
</div>

<div class="card text-center">

<button><%= link_to "Back to list", tasks_path %></button>
</div>
</div>
